@using Microsoft.AspNetCore.Http;
@model RiskReporting.Models.ReportModel 
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="jumbotron">
                    <h3>
                        Risk Reporting
                    </h3>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="Index" asp-controller="Report" method="post" enctype="multipart/form-data">
                            <p>Select the Excel file:</p>
                            <input asp-for="ExcelFile" type="file" accept=".xls,.xlsx" />
                            <hr />
                            <p>Select the XML data file:</p>
                            <input asp-for="DataFile" type="file" accept=".xml" />
                            <hr />
                            <input type="submit" value="Generate Report" />
                            <hr />
                        </form>
                    </div>
                </div>
            </div>
        </div>
</div>


